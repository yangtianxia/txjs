{
  "name": "@txjs/bem",
  "version": "0.0.6",
  "description": "css命名方法，支持css-modules绑定使用",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.mjs",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint src --ext .ts",
    "clean": "rimraf ./dist",
    "dev": "node ./build.js -w",
    "build:types": "tsc -p ./tsconfig.json --emitDeclarationOnly",
    "build:bundle": "node ./build.js",
    "build": "npm run clean && npm run lint && npm run build:bundle && npm run build:types"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yangtianxia/txjs.git",
    "directory": "packages/bem"
  },
  "keywords": [
    "txjs",
    "@txjs/bem",
    "css-modules"
  ],
  "author": "yangtianxia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yangtianxia/txjs/issues"
  },
  "homepage": "https://github.com/yangtianxia/txjs#readme",
  "devDependencies": {
    "esbuild": "^0.23.1"
  },
  "dependencies": {
    "@txjs/bool": "^0.0.10"
  }
}
